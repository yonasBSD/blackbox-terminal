{
  "app-id": "com.raggesilver.BlackBox",
  "runtime": "org.gnome.Platform",
  "runtime-version": "42",
  "sdk": "org.gnome.Sdk",
  "command": "blackbox-link-system-fonts",
  "finish-args": [
    "--filesystem=home:ro",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--talk-name=org.freedesktop.Flatpak"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "/share/vala",
    "*.la",
    "*.a"
  ],
